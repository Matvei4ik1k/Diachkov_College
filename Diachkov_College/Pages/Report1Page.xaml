<Page x:Class="Diachkov_College.Pages.Report1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diachkov_College.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="Report1Page">

    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="100" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBlock HorizontalAlignment="Center" FontSize="18" VerticalAlignment="Center" Text="Выберите начало периода"/>
        <TextBlock HorizontalAlignment="Center" FontSize="18" VerticalAlignment="Center" Text="Выберите группу" Grid.Row="2"/>
        <TextBlock  Text="Выберите конец периода" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"/>
        <DatePicker Name="DateStartDp" Grid.Row="1" Width="200"/>
        <DatePicker Name="DateFinishDp" Grid.Column="2" Width="200" Grid.Row="1"/>

        <ComboBox Name="GroupCmb" Grid.Column="2" Grid.Row="2" Width="200" Height="50"/>

        <DataGrid Name="ReportDg" AutoGenerateColumns="False" Grid.Row="4" Grid.ColumnSpan="9">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата"/>
                <DataGridTextColumn Header="Группа"/>
                <DataGridTextColumn Header="Специальность"/>
                <DataGridTextColumn Header="Активность"/>
                <DataGridTextColumn Header="Направленность"/>
                <DataGridTextColumn Header="Балл"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Name="ChooseBtn" Click="ChooseBtn_Click" Background="Transparent" BorderBrush="Black" Grid.Row="6" Width="200" Height="40" Content="Выбрать" Margin="5"/>

    </Grid>
</Page>
