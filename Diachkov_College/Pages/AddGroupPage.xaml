<Page x:Class="Diachkov_College.Pages.AddGroupPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diachkov_College.Pages"
      mc:Ignorable="d" 
      Height="450" Width="480"
      Title="AddGroupPage">

    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" VerticalAlignment="Center" Grid.Row="2" Text="Введите группу" FontSize="16"/>
        <TextBox Name="GroupTb" Grid.Row="2" Grid.Column="3" Background="White" />
        <TextBlock Grid.Column="1"  VerticalAlignment="Center" Grid.Row="4" Text="Выберите специальность" FontSize="16"/>
        <ComboBox Name="SpecialCmb" Background="White" Grid.Row="4" Grid.Column="3" />
        <Button Height="40" Grid.Row="6" Grid.Column="3" Name="AddBtn" Click="AddBtn_Click" Content="Добавить"/>
    </Grid>
</Page>
