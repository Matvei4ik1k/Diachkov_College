<Window x:Class="Diachkov_College.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diachkov_College"
        mc:Ignorable="d"
         Title="MainWindow" Height="450" Width="800">
    <Grid Background="Gray" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="0"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Button Height="50" Name="AddGroupBtn"  Grid.Row="2"   Content="Добавить группу" Click="AddGroupBtn_Click" />
            <Button Height="50" Name="AddActivityBtn"  Grid.Row="4"   Content="Добавить активность" Click="AddActivityBtn_Click"/>
            <Button Height="50" Name="JournalBtn" Grid.Row="6"   Content="Учёт" Click="JournalBtn_Click"/>
            <Button Height="50" Name="Report1Btn"  Grid.Row="8"   Content="Отчёт1" Click="Report1Btn_Click"/>
            <Button Height="50" Name="Report2Btn" Grid.Row="10"   Content="Отчёт2" Click="Report2Btn_Click" />
        </Grid>

        <Frame Grid.Column="1" Name="MainFrame" NavigationUIVisibility="Hidden"  />
    </Grid>
</Window>
